{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./build",
        "rootDir": "./src",
        "jsx": "react",
        "noImplicitUseStrict": true,
        "declaration": false,
        "stripInternal": true,
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}
